{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "rootDir": "lib",
    "baseUrl": "lib",
    "outDir": "dist",
    "paths": {
      "@lib/*": ["./*"],
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
  ],
}